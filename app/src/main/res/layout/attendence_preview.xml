<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_light_mode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AbsentOfsubjectTextView"
        android:text="Absenties"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AbsentsRecView"
        android:layout_below="@+id/AbsentOfsubjectTextView"
        android:layout_above="@+id/submitBtnFinal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/submitBtnFinal"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:text="Submit"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/background_light_mode"/>

</RelativeLayout>