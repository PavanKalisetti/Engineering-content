<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendence">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignForTestingTxt"
        android:text="This is under Testing mode Allowed for some Classes"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignForTestingTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

    </TableLayout>


    <TextView
        android:id="@+id/totalAttendanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tableLayout"
        android:layout_marginTop="16dp"
        android:text="Total Attendance : "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>
